[Unit]
Description=Service control PWM fans via RPi GPIO
After=network.target

[Service]
User=pi
Group=pi
WorkingDirectory=/home/pi/rpi_fans_control
Environment="PATH=/home/pi/rpi_fans_control/pi_fan_env/bin"
ExecStart=/home/pi/rpi_fans_control/pi_fan_env/python /home/pi/rpi_fans_control/fans_controls.py
StandardInput=tty-force

[Install]
WantedBy=multi-user.target